programa {

/*Construa um algoritmo para calcular a média aritmética
entre dois números. Faça o fluxograma.*/

  funcao inicio() {
    
    inteiro n1, n2 , media

    escreva("Digite um número 1: ")
    leia(n1)

    escreva("\nDigite um número 2: ")
    leia(n2)

    media = ( n1 + n2 ) / 2
    
    escreva("\nMédia Aritmética dos dois valores: ",media)
    escreva("\n")

  }
}
